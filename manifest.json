{
  "manifest_version": 2,

  "name": "Badlion Upcoming UHC Notification",
  "description": "This application automatically notifies you on upcoming UHCs.",
  "version": "1.0",
  "options_page": "settings.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "settings.html"
  },
  "background": {
    "scripts": ["checker.js"]
  },
  "permissions": [
    "activeTab",
    "notifications",
    "https://uhc.projectthing.tk/*",
    "storage",
    "unlimitedStorage"
  ]
}
